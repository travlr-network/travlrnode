# Blockchain configuration
BLOCKCHAIN_TYPE=ethereum  # or 'sui' or 'rest'

# Ethereum configuration
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
ETH_PRIVATE_KEY=your_ethereum_private_key
ETH_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# Sui configuration
SUI_RPC_URL=https://fullnode.devnet.sui.io:443
SUI_PRIVATE_KEY=your_sui_private_key
SUI_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
SUI_MODULE_ID=0x1234567890123456789012345678901234567890::data_sharing_contract

# REST API fallback configuration (for testing)
REST_API_BASE_URL=http://localhost:3000

# Application configuration
API_PORT=3000

DATA_STORE_TYPE=file
DATA_STORE_DIR=./data
P2P_TYPE=gun

# Veramo configuration
VERAMO_SECRET_KEY=your_secret_key_here
DID_PROVIDER=ethereum  # or 'rest'

# Ethereum configuration (only needed if DID_PROVIDER is 'ethereum')
INFURA_PROJECT_ID=your_infura_project_id
ETHEREUM_NETWORK=mainnet  # or 'goerli' or 'sepolia'

# REST API configuration (only needed if DID_PROVIDER is 'rest')
PUBLIC_BLOCKCHAIN_API_URL=http://localhost:3000
